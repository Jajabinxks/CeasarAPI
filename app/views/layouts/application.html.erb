<!DOCTYPE html>
<html>
  <head>
    <title>CeasarCipher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <h1>Ceasar Cipher</h1>
  <body>
      
        <form method="get">
            Input message to be Encrypted,Decryted or Cryptanalyse here <br>
            <textarea id="box1" name="box1" rows="10" cols="80"></textarea>
            <br><br>
            KEY <br>
            <input type="number" id="key" name="key" min="1" max="26"><br>             
            <input type="submit" value="Encrypt" formaction="/encrypt"> <br>                        
            <input type="submit" value="Decrypt" formaction="/decrypt"><br>
            <input type="submit" value="Cryptanalyse" formaction="/cryptanalyse"><br>
        </form>
    
      <%= yield %>
  </body>
</html>
